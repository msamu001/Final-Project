import static org.junit.Assert.*;

import org.junit.Assert;
import org.junit.Before;
import org.junit.Test;

public class DFS_Test {
	DFS dfs;
	EWG graph, graph2, graph3;
	@Before
	public void setUp() throws Exception {
		graph = new EWG();
		graph2 = new EWG();
		graph3 = new EWG();
		
		graph.addVertex("a");
		
		graph2.addEdge(new Edge(new Vertex("a"), new Vertex("b")));
		
		graph3.addEdge(new Edge(new Vertex("a"), new Vertex("b")));
		graph3.addEdge(new Edge(new Vertex("c"), new Vertex("b")));
		graph3.addEdge(new Edge(new Vertex("a"), new Vertex("b")));
	}

	@Test
	public void test() {
		// Check DFS identifies one vertex correctly
		dfs = new DFS(graph, "a");
		Assert.assertEquals(false, dfs.isSpanTree());
		Assert.assertEquals(false, dfs.hasLoop());
	}

}
